<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
    {% for path in paths -%}
        <url>
            <loc>{{ absolute_url(path(path[0], path[1]|merge({'_locale':'fr'}))) }}</loc>
            <xhtml:link
                rel="alternate"
                hreflang="{{ app.request.locale }}"
                href="{{ absolute_url(path(path[0], path[1]|merge({'_locale':app.request.locale}))) }}"/>
        </url>
    {% endfor %}
</urlset>