{% set footer_show_participation = true %}

{% extends 'user/register/layout.html.twig' %}

{% block layout_header %}

{% endblock %}

{% block register_notice %}
    <div class="mt-3">
        <p class="font-weight-bold">
            Les informations de cette page<br>
