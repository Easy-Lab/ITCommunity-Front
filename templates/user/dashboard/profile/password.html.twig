{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5 mb-5">
        <h1 class="h1resp">{{"page.ambassador.dashboard.edit.profile.title_edit_mdp"|trans }}</h1>
        <form action="{{ path('user_dashboard_password') }}" method="post" class="mt-3">

            <div class="form-group">
                <label for="new_password">{{"page.ambassador.dashboard.layout.section.profile.password.form.new_password.label"|trans }} <span class="text-muted">{{"page.ambassador._forms.password.helper"|trans }}</span></label>
                <input  required style="width: 100%; max-width: 500px" class="form-control" type="password" name="password" data-error="{{ validator.error('password') }}"/>
            </div>

            <div class="form-group">
                <label for="confirm_new_password">{{"page.ambassador.dashboard.layout.section.profile.password.form.new_password_confirm.label"|trans }}</label>
                <input  required style="width: 100%; max-width: 500px" class="form-control" type="password" name="passwordConfirm" data-error="{{ validator.error('passwordConfirm') }}"/>
            </div>

            <button type="submit" class="btn btn-theme mt-4"><a class="goback" style="text-decoration: none; color: white" href="{{ path('user_dashboard_profile') }}" >{{"page._common.button.annuler"|trans }}</a></button>
            <button type="submit" class="btn btn-theme mt-4">{{"page.ambassador.dashboard.layout.section.profile.password.form.update_button"|trans }}</button>

        </form>
    </div>
{% endblock %}
