
<div class="row">
    <div class="col-xs-12 col">
        <div class="form-group">
            <label for="username">{{ 'page.ambassador._forms.username.label'|trans }}</label>
            <input type="text" class="form-control" name="username" id="username" value="{% if user %}{{ user['email'] }}{% else %}{{ validator.value('username') }}{% endif %}" data-error="{{ validator.error('username') }}">
        </div>
    </div>
    <div class="col-xs-12 col">
        <div class="form-group">
            <label for="pseudo">{{ 'page.ambassador._forms.pseudo.label'|trans }}</label>
            <input type="text" class="form-control" name="pseudo" id="pseudo" value="{% if user %}{{ user['username'] }}{% else %}{{ validator.value('pseudo') }}{% endif %}" data-error="{{ validator.error('pseudo') }}" maxlength="17">
        </div>
    </div>
</div>
