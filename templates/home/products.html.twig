<section class="products">
    <div class="container">
        <h3 class="titleproduct"> {{ 'page.home.titleproduct'|trans }} </h3>

        <p class="text-center descriptionproduct" style="margin-bottom: 5px;"> {{ 'page.home.text1'|trans }} </p>
        <p class="text-center descriptionproduct" style="margin-bottom: 5px;"> {{ 'page.home.text2'|trans }} </p>
        <p class="text-center descriptionproduct" style="margin-bottom: 5px;"> {{ 'page.home.text3'|trans }} </p>
        <p class="text-center descriptionproduct"> {{ 'page.home.text4'|trans }} </p>


        <h3 class="questionproduct" style="padding-top: 25px;padding-bottom: 0px;"> {{ 'page.home.questionproduct'|trans }} </h3>


        <h5 class="" style="padding-top: 25px;padding-bottom: 0px; font-weight: bold; text-align: center"> {{ 'page.home.categorie1'|trans }} </h5>
        <p class="text-center descriptionproduct" style="margin-bottom: 5px;"> {{ 'page.home.textCat1'|trans }} </p>
        <p class="text-center descriptionproduct" style="margin-bottom: 5px;"> {{ 'page.home.text2Cat1'|trans }} </p>


        {% for productFamily in productsFamily %}
            <div class="product-preview mt-5 mb-5">
                <div style="width: 229px" id="productImg">
{#                    <img src="{{ asset(assets_url ~ 'images/' ~ productFamily.image) }}" />#}
                </div>
                <div class="product-preview-content">
                    <h4 class="font-weight-bold">{{ (('products.families.' ~ productFamily.name)|trans) |raw  }}</h4>
                    {{ (productsDescription[productFamily.name])|raw }}
                    <div class="form-group">
                        <a href="#order1"> <button class="btn btn-theme js-map-search-productId displayMobile" data-index="{{ productFamily.id }}" value="{{ productFamily.id }}" id="seeAmb"> {{ 'page.home.products.buttonAmb'|trans }}<i class="fa fa-angle-right ml-2"></i></button></a>
                        {#% if productFamily.displayRatingPage == 1 %#}
                        <a class="btn btn-theme ml-2 displayMobile" href="{{ path('product_review', {'id': productFamily.id}) }}" id="seeAvis">{{ 'page.home.products.buttonAvis'|trans }} <i class="fa fa-angle-right ml-2"></i></a>
                        {% if productFamily.name|slice(10) != "AWD"%}
                        <a target="_blank" class="btn btn-theme ml-2 displayMobile" href="https://promo.husqvarna.com/fr/promotions/robots-tondeuses/{{ productFamily.name|slice(10) }}?utm_source=Plateforme_Ambassadeur&utm_medium=link&utm_campaign=Plateforme_Ambassadeur" id="buyOnline">{{ 'page.home.products.buttonAchat'|trans }} <i class="fa fa-angle-right ml-2"></i></a>
                        {% endif %}

                        {#% endif %#}
                    </div>
                </div>
            </div>
        {% endfor %}
        <h5 class="" style="padding-top: 25px;padding-bottom: 0px; font-weight: bold; text-align: center"> {{ 'page.home.categorie2'|trans }} </h5>
        <p class="text-center descriptionproduct" style="margin-bottom: 5px;"> {{ 'page.home.textCat2'|trans }} </p>
        <p class="text-center descriptionproduct" style="margin-bottom: 5px;"> {{ 'page.home.text2Cat2'|trans }} </p>
        {% for productFamilyNotX in productsFamilyNotX %}
            <div class="product-preview mt-5 mb-5">
                <div style="width: 229px" id="productImg">
                    <img src="{{ asset(assets_url ~ 'images/' ~ productFamilyNotX.image) }}" />
                </div>
                <div class="product-preview-content">
                    <h4 class="font-weight-bold">{{ (('products.families.' ~ productFamilyNotX.name)|trans) |raw  }}</h4>
                    {{ (productsDescriptionNotX[productFamilyNotX.name])|raw }}
                    <div class="form-group">
                        <a href="#order1"> <button class="btn btn-theme js-map-search-productId displayMobile" data-index="{{ productFamilyNotX.id }}" value="{{ productFamilyNotX.id }}" id="seeAmb"> {{ 'page.home.products.buttonAmb'|trans }}<i class="fa fa-angle-right ml-2"></i></button></a>
                        {#% if productFamily.displayRatingPage == 1 %#}
                        <a class="btn btn-theme ml-2 displayMobile" href="{{ path('product_review', {'id': productFamilyNotX.id}) }}" id="seeAvis">{{ 'page.home.products.buttonAvis'|trans }} <i class="fa fa-angle-right ml-2"></i></a>
                        {% if productFamilyNotX.name|slice(10) != "AWD"%}
                            <a target="_blank" class="btn btn-theme ml-2 displayMobile" href="https://promo.husqvarna.com/fr/promotions/robots-tondeuses/{{ productFamilyNotX.name|slice(10) }}?utm_source=Plateforme_Ambassadeur&utm_medium=link&utm_campaign=Plateforme_Ambassadeur" id="buyOnline">{{ 'page.home.products.buttonAchat'|trans }} <i class="fa fa-angle-right ml-2"></i></a>
                        {% endif %}

                        {#% endif %#}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>
