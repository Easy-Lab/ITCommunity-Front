<script>
    function expand() {
        var displayBenefits = document.getElementById("expand");
        if (displayBenefits.style.display == "none") {
            document.getElementById("expand").style.display = "block";
            document.getElementById("changeCSSjs").style.color = "#1E90FF";
            document.getElementById("changeCSSjs2").style.borderBottomColor = "#1E90FF";
            document.getElementById("changeCSSjs2").style.borderRightColor = "#1E90FF";
            document.getElementById("changeCSSjs2").style.transform = "rotate(225deg)";
            document.getElementById("changeCSSjs2").style.marginBottom = "-4px";
            document.getElementById("displayNoneBorderTop").style.borderTop = "none"


        } else {
            document.getElementById("expand").style.display = "none";
            document.getElementById("changeCSSjs").style.color = "#7d7d7d";

            document.getElementById("changeCSSjs2").style.borderBottomColor = "#7d7d7d";
            document.getElementById("changeCSSjs2").style.borderRightColor = "#7d7d7d";
            document.getElementById("changeCSSjs2").style.transform = "rotate(45deg)";
            document.getElementById("changeCSSjs2").style.marginBottom = "2px";
            document.getElementById("displayNoneBorderTop").style.borderTop = "1px solid #d8d8d8"


        }
    }
</script>
